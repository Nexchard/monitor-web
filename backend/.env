# 同步配置
SYNC_CRON=0 * * * *  # 每小时同步一次
SYNC_RETRY_TIMES=3   # 同步失败重试次数
SYNC_RETRY_DELAY=5000  # 重试延迟（毫秒）
IMMEDIATE_SYNC=true    # 启动时立即同步
STRICT_VALIDATION=false  # 严格数据验证

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_DATABASE=cloud_monitor

# 华为云数据库配置
HUAWEI_DB_HOST=localhost
HUAWEI_DB_PORT=3306
HUAWEI_DB_USER=root
HUAWEI_DB_PASSWORD=123456
HUAWEI_DB_DATABASE=huawei_cloud

# 腾讯云数据库配置
TENCENT_DB_HOST=localhost
TENCENT_DB_PORT=3306
TENCENT_DB_USER=root
TENCENT_DB_PASSWORD=123456
TENCENT_DB_DATABASE=tencent_cloud

# 服务器配置
PORT=3000
HOST=0.0.0.0

# 同步间隔（毫秒），默认1小时 
SYNC_INTERVAL=3600000 